<Window x:Class="Safe0ne.ParentApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Safe0ne Parental — Parent App"
        Width="1200" Height="760"
        MinWidth="640" MinHeight="520"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="#FFF6F8FB">
            <Grid>
	                <wv2:WebView2 x:Name="Browser" />
<!-- DEV Panel overlay (debug/support). Hidden by default; toggled via 7× tap on version label. -->
	                <Border x:Name="DevPanel"
	                        Visibility="Collapsed"
	                        Background="#CC0B1220"
	                        HorizontalAlignment="Stretch"
	                        VerticalAlignment="Stretch">
	                    <Border HorizontalAlignment="Right"
	                            VerticalAlignment="Top"
	                            Width="420"
	                            Margin="18"
	                            Background="White"
	                            Padding="16"
	                            CornerRadius="16">
	                        <StackPanel>
	                            <DockPanel Margin="0,0,0,10">
	                                <TextBlock DockPanel.Dock="Left" Text="Developer Panel" FontSize="16" FontWeight="SemiBold" />
	                                <Button DockPanel.Dock="Right" Content="Close" Padding="10,6" Click="DevPanel_Close_Click" />
	                            </DockPanel>
	
	                            <TextBlock x:Name="DevPanelStatus" TextWrapping="Wrap" Foreground="#AA0B1220" Margin="0,0,0,12" />
	
	                            <UniformGrid Columns="2" Rows="3" Margin="0,0,0,12">
	                                <Button Content="Reload" Margin="0,0,10,10" Padding="10,8" Click="DevPanel_Reload_Click" />
	                                <Button Content="Hard Reload (clear cache)" Margin="0,0,0,10" Padding="10,8" Click="DevPanel_HardReload_Click" />
	                                <Button Content="Clear Cache" Margin="0,0,10,10" Padding="10,8" Click="DevPanel_ClearCache_Click" />
	                                <Button Content="Open DevTools" Margin="0,0,0,10" Padding="10,8" Click="DevPanel_OpenDevTools_Click" />
	                                <Button Content="Go Home" Margin="0,0,10,0" Padding="10,8" Click="DevPanel_GoHome_Click" />
	                                <Button Content="Copy Current URL" Padding="10,8" Click="DevPanel_CopyUrl_Click" />
	                            </UniformGrid>

	                            <TextBlock Text="Tip: Use this panel to recover if the UI breaks due to cached JS or a syntax error." Foreground="#880B1220" TextWrapping="Wrap"/>
	                        </StackPanel>
	                    </Border>
	                </Border>
                <Border x:Name="Overlay" Background="#CC0B1220" Visibility="Collapsed">
                    <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="520" Background="White" Padding="24" CornerRadius="16">
                        <StackPanel>
                        <TextBlock Text="WebView2 is required" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#AA0B1220"
                                   Text="This app uses WebView2 to render the dashboard. Please install the Microsoft Edge WebView2 Runtime, then restart."/>
                        <StackPanel Orientation="Horizontal" Margin="0,18,0,0" HorizontalAlignment="Right">
                            <Button Content="Copy download link" Padding="14,8" Margin="0,0,10,0" Click="CopyWebView2Link_Click"/>
                            <Button Content="Quit" Padding="14,8" Click="Quit_Click"/>
                        </StackPanel>
                        </StackPanel>
                    </Border>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
